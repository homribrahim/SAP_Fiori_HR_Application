<mvc:View controllerName="brahim.project.controller.Home"
   	xmlns="sap.m" displayBlock="true"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core"
    height="100%">

    <Page class="authPage" showHeader="false">    
        <VBox
            width="100%"
            height="100%"
            alignItems="Center"
            justifyContent="Center"
            >
                <HBox 
                    width="53rem"
                    height="595px"
                    alignItems="Center"
                    justifyContent="Center"
                    class="HBOX1"
                    >                              
                   <Image width="100%" height="600px" src="/utils/images/astro.jpg" alt="Aymax"/> 
                   <VBox
                        width="27rem"
                        height="600px"
                        class="VBOX2"
                    >
                        <f:Card class="sapUiLargeMarginBeginEnd sapUiLargeMarginTop customCard" width="85%">
                            <f:header>
                                <card:Header class="sapUiLargeMarginTop" title="S'identifier" subtitle="Connectez-vous et stimuler vote expÃ©rience professionnelle"/>
                            </f:header>                 
                            <f:content>              
                                <VBox
                                    height="320px"
                                    class="sapUiSmallMarginBeginEnd"
                                    justifyContent="Center"
                                    >                                                         
                                    <VBox class="sapUiTinyMarginTop" justifyContent="Center">
                                        <Label text="Identifiant" design="Bold"></Label>
                                        <Input class="sapMInputBaseContentWrapper" placeholder="Identifiant" width="19rem">
                                        </Input>
                                    </VBox>
                                    <VBox class="sapUiSmallMarginTop" justifyContent="Center">
                                        <Label text="Mot de passe" design="Bold"></Label>
                                        <Input class="sapMInputBaseContentWrapper" placeholder="Mot de passe" width="19rem" type="Password">
                                        </Input>
                                    </VBox>
                                    <HBox>
                                        <Button class="sapUiSmallMarginTop btn" width="19rem" text="S'identifier"></Button>
                                    </HBox>                           
                                </VBox>
                            </f:content>
                        </f:Card>
                    </VBox>  
                </HBox>
        </VBox>
    </Page>
</mvc:View>

